/*******
* animations
*******/
.grau180
    transform rotate(180deg)

.produtos-info-off
    animation produtos-info-off 0.8s ease-in
    transform translate3d(0, 0, 0)

.produtos-info-on
    animation  produtos-info-on 0.8s ease-out
    transform  translate3d(0, 0, 0)

@keyframes produtos-info-on
    0% {
        left  -45%
    }
    100% {
        left  0px;
    }

@keyframes produtos-info-off
    0% {
        left  0px
    }
    100% {
        left: -45%
    }

.oportunidades-info-off {
    animation: oportunidades-info-off 0.8s ease-in;
    transform: translate3d(0, 0, 0);
}
.oportunidades-info-on {
    animation: oportunidades-info-on 0.8s ease-out;
    transform: translate3d(0, 0, 0);
}

@keyframes oportunidades-info-on
    0% {
        right -45%
    }
    100% {
        right 0px
    }
@keyframes oportunidades-info-off
    0% {
        right 0px
    }
    100% {
        right -45%
    }

.floating
    float left
    animation Floating 3s infinite ease-in-out
    margin-left 30px
    margin-top 5px

@keyframes Floating
    from {
        transform translate(0, 0px)
    }
    65% {
        transform translate(0, 15px)
    }
    to {
        transform translate(0, -0px)
    }

.rotate-up
    animation animationRotate infinite ease 4s
    transform-origin 50% 50%

@keyframes animationRotate
    0% {
        transform translate(0px,0px) rotate(0deg)
    }
    25% {
        transform translate(0px,30px) rotate(0deg)
    }
    50% {
        transform translate(0px,12px) rotate(20deg)
    }
    78% {
        transform translate(0px,30px)  rotate(-381deg)
    }
    100% {
        transform translate(0px,0px)  rotate(0deg)
    }

.rotate-down{
    animation animationRotateDown infinite ease 4s
    transform-origin 50% 50%
}

@keyframes animationRotateDown
  0% {
    transform translate(0px,0px)  rotate(180deg) scaleX(1.00)
  }
  25% {
    transform translate(0px,30px)  rotate(180deg) scaleX(1.00)
  }
  50% {
    transform translate(0px,12px)  rotate(200deg) scaleX(1.00)
  }
  79% {
    transform translate(0px,30px)  rotate(160deg) scaleX(0.99)
  }
  100% {
    transform translate(0px,0px)  rotate(180deg) scaleX(0.99)
  }
